


<html>
<head>
    <meta charset="UTF-8">
    <title>Login page</title>
    @model Web_API_Services_1.Store_User
    @{
        ViewBag.Title = "Login";
    }
    <!-- bootstrap library (minified css) -->
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <!-- bootstrap library (jquery library) -->
    <script src="jquery/jquery-3.3.1.min.js"></script>
    <!-- JavaScript -->
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <!-- style css -->
    <style>
        body {
            /*using image for body tag*/
            background-image: url("image/wallpapers.jpg");
        }

        .main-div {
            background-color: #fff; /*color white for background*/
            border-radius: 4px;
            padding: 50px 60px 70px 60px;
            max-width: 400px;
            margin: 10% auto 15% auto; /*it will centered screen*/
        }

        .forgot {
            text-decoration: underline;
            margin-bottom: 25px;
        }
    </style>

    <!-- jquery for input -->
    <script>

        function doST() {
            $("#email, #password").focus(function () {
                $("#request-input").fadeOut("fast");
            });
            const url = 'http://' + window.location.host
            $.post("/Store_User/UserLoginNotModel", {
                email: $('#email').val(),
                password: $('#password').val()
            }, function (data) {
                //alert(data);
                if (data == "True")
                    window.location.replace(url);
                else
                    alert("Tên đăng nhập or password ko valid")
            });
        }
        //the page has loaded
        $(document).ready(function () {
            // input email and password has focusing, then hide request paragraph
            //$("#email, #password").focus(function () {
            //    $("#request-input").fadeOut("fast");
            //});

            //event button login click
            //$('#btnLogin').click(function () {


            //    $.post("/Store_User/UserLoginNotModel", {
            //        email: 'sample1@google',
            //        password: '123d'
            //    }, function () {
            //        alert("2login success")
            //    });
                

            //});
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="main-div">
                <div class="panel text-center">
                    <h2>Admin Login</h2>
                    <p id="request-input">Please enter your email and password</p>
                </div>
                <div>
                    <form action="#">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" placeholder="Email Address" required>
                            
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" placeholder="Password" required>
                        </div>
                        <div class="forgot">
                            <a href="www.google.com">Forgot Password?</a>
                        </div>
                        <button id="btnLogin" class="btn btn-primary" type="submit" onclick="doST()">Login</button>
                        <button id="btnLog2" onclick=doST() class="btn">Login2</button>
                    </form>
                </div>
                

            </div>
        </div>
    </div>
</body>
</html>